<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.languages_learning_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Languages_Learning_App">
        <activity android:name=".Views.Trainee.TraineeRankActivity"></activity>
        <activity android:name=".Views.Trainee.TraineeWritingTestActivity" />
        <activity android:name=".Views.Trainee.TraineeAudioTestActivity" />
        <activity android:name=".Views.Trainee.TraineeSelectionTestActivity" />
        <activity android:name=".Views.Trainee.TraineePracticeActivity" />
        <activity android:name=".Views.Trainee.TraineeVocabularyActivity" />
        <activity android:name=".Views.Manager.ManagerVocabularyActivity" />
        <activity android:name=".Views.Manager.ManagerPracticeActivity" />
        <activity android:name=".Views.Manager.ManagerMainActivity" />
        <activity android:name=".Views.ChangePasswordActivity" />
        <activity android:name=".Views.Admin.AdminMainActivity" />
        <activity android:name=".Views.Trainee.TraineeMainActivity" />
        <activity android:name=".Views.FogotPasswordActivity" />
        <activity android:name=".Views.ProfileActivity" />
        <activity android:name=".Views.RegisterUserActivity" />
        <activity android:name=".Views.ChooseLanguageActivity" />
        <activity android:name=".Views.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>